<?xml version="1.0" encoding="utf-8" ?>

<config:template-call
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
	final="false"
	template="com.top_logic/contentLayout.template.xml"
>
	<arguments
		orientation="HORIZONTAL"
		resizable="true"
	>
		<components>
			<layout-reference resource="admin/studio/layoutEditor/layoutsTable.layout.xml">
				<content-layouting class="com.top_logic.layout.structure.ContentLayouting">
					<contextMenuFactory class="com.top_logic.layout.basic.contextmenu.component.factory.PlainComponentContextMenuFactory">
						<customCommands class="com.top_logic.layout.basic.contextmenu.config.NoContextMenuCommands"/>
					</contextMenuFactory>
				</content-layouting>
				<layoutInfo
					scrolleable="true"
					size="750"
				/>
			</layout-reference>
			<layout-reference resource="admin/studio/layoutEditor/detailForm.layout.xml">
				<content-layouting class="com.top_logic.layout.structure.ContentLayouting">
					<contextMenuFactory class="com.top_logic.layout.basic.contextmenu.component.factory.PlainComponentContextMenuFactory">
						<customCommands class="com.top_logic.layout.basic.contextmenu.config.NoContextMenuCommands"/>
					</contextMenuFactory>
				</content-layouting>
				<layoutInfo
					scrolleable="true"
					size=""
				/>
			</layout-reference>
		</components>
	</arguments>
</config:template-call>