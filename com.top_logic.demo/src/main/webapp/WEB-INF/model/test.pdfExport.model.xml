<?xml version="1.0" encoding="utf-8" ?>

<model xmlns="http://www.top-logic.com/ns/dynamic-types/6.0">
	<module name="test.pdfExport">
		<class name="A">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<annotations>
				<form-definition>
					<form>
						<field
							attribute="name"
							fullQualifiedName="test.pdfExport:A#name"
							type="tl.core:String"
						/>
						<other-attributes/>
					</form>
				</form-definition>
				<export-definition>
					<export-form>
						<macro>
							<expr><![CDATA[<h3 style="text-align: center;">Export vom {now()}!</h3>]]></expr>
						</macro>
						<field
							attribute="name"
							fullQualifiedName="test.pdfExport:A#name"
							type="tl.core:String"
						/>
						<other-attributes/>
					</export-form>
				</export-definition>
			</annotations>
			<attributes>
				<property name="name"
					mandatory="true"
					type="tl.core:String"
				/>
				<reference name="snapshots"
					composite="true"
					kind="forwards"
					multiple="true"
					navigate="true"
					type="PDFSnapshot"
				/>
				<property name="version"
					mandatory="true"
					type="tl.core:Integer"
				>
					<annotations>
						<default-value>
							<int value="1"/>
						</default-value>
					</annotations>
				</property>
			</attributes>
		</class>
		<class name="B">
			<generalizations>
				<generalization type="A"/>
			</generalizations>
			<annotations>
				<export-definition>
					<export-form>
						<field
							attribute="name"
							fullQualifiedName="test.pdfExport:A#name"
							type="tl.core:String"
						/>
						<foreign-objects
							items="x -> $x.get(`test.pdfExport:B#referenceToA`)"
							type="DemoTypes:DemoTypes.All"
						>
							<label>#("Referenced A"@en, "Referenziertes A"@de)</label>
						</foreign-objects>
					</export-form>
				</export-definition>
			</annotations>
			<attributes>
				<reference name="referenceToA"
					kind="forwards"
					navigate="true"
					type="DemoTypes:DemoTypes.A"
				/>
			</attributes>
		</class>
		<class name="C">
			<generalizations>
				<generalization type="A"/>
			</generalizations>
			<attributes>
				<property name="intValue"
					type="tl.core:Integer"
				/>
			</attributes>
		</class>
		<class name="D">
			<generalizations>
				<generalization type="A"/>
			</generalizations>
			<attributes>
				<property name="date"
					type="tl.core:Date"
				/>
			</attributes>
		</class>
		<class name="P">
			<generalizations>
				<generalization type="A"/>
			</generalizations>
			<attributes>
				<property name="password"
					type="tl.core:Password"
				/>
			</attributes>
		</class>
		<class name="PDFSnapshot">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<annotations>
				<id-column value="version"/>
			</annotations>
			<attributes>
				<property name="file"
					mandatory="true"
					type="tl.core:Binary"
				/>
				<property name="date"
					mandatory="true"
					type="tl.core:DateTime"
				>
					<annotations>
						<storage-algorithm>
							<query expr="x -> $x.createRevision().get(`tl.core:Revision#date`)"/>
						</storage-algorithm>
					</annotations>
				</property>
				<property name="version"
					mandatory="true"
					type="tl.core:Integer"
				/>
			</attributes>
		</class>
	</module>
</model>