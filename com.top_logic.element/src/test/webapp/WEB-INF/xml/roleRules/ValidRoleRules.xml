<?xml version="1.0" encoding="utf-8" ?>

<role-rules config:interface="com.top_logic.element.boundsec.manager.rule.config.RoleRulesConfig"
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
>
	<rules>
		<rule
			inherit="true"
			meta-element="projElement:ROOT:projElement.All"
			resource-key="roleRule.minimal"
			role="testRole"
		>
			<path>
				<step
					attribute="Verantwortlicher"
					meta-element="projElement:ROOT:projElement.All"
				/>
			</path>
		</rule>
		<rule
			inherit="true"
			meta-element="projElement:ROOT:projElement.All"
			resource-key="roleRule.simple"
			role="testRole"
		>
			<path>
				<step
					attribute="Mitarbeiter"
					inverse="false"
					meta-element="projElement:ROOT:projElement.All"
				/>
			</path>
		</rule>
		<rule
			inherit="true"
			meta-element="projElement:ROOT:projElement.Part"
			resource-key="roleRule.forward"
			role="testRole"
		>
			<path>
				<step
					attribute="AbhaengigVon"
					inverse="false"
					meta-element="projElement:ROOT:projElement.All"
				/>
				<step
					attribute="Mitarbeiter"
					inverse="false"
					meta-element="projElement:ROOT:projElement.All"
				/>
			</path>
		</rule>
		<rule
			inherit="true"
			meta-element="projElement:ROOT:projElement.Part"
			resource-key="roleRule.backward"
			role="testRole"
		>
			<path>
				<step
					attribute="AbhaengigVon"
					inverse="true"
					meta-element="projElement:ROOT:projElement.All"
				/>
				<step
					attribute="Mitarbeiter"
					inverse="false"
					meta-element="projElement:ROOT:projElement.All"
				/>
			</path>
		</rule>
	</rules>
</role-rules>