<?xml version="1.0" encoding="UTF-8"?>
<web-fragment
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
	id="tl-service-openapi" 
	version="3.0"
	metadata-complete="true"
>
    <name>tl-service-openapi</name>

	<!-- OpenApi Server -->
    <servlet>
		<servlet-name>OpenApiServlet</servlet-name>
		<servlet-class>com.top_logic.service.openapi.server.OpenApiServlet</servlet-class>
	</servlet>

    <servlet-mapping>
		<servlet-name>OpenApiServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

</web-fragment>
